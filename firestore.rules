rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isPubliclyVisible() {
      return resource.data.isActive == true;
    }

    // Products
    // Public: Read only if active
    // Admin: specific read (listing drafts) and write
    match /products/{productId} {
      allow read: if isPubliclyVisible() || isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Categories
    match /categories/{categoryId} {
      allow read: if isPubliclyVisible() || isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Site Content
    // Always public read, admin write
    match /content/{docId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
